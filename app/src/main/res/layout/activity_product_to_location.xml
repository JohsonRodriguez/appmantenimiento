<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ProductToLocationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_backOutProduct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/shape_menu"
            app:srcCompat="@drawable/ic_baseline_arrow_back"
            android:layout_marginLeft="10dp"

            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="36dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Uso de productos por ubicaciÃ³n"
            android:fontFamily="@font/rubikregular"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvfrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione producto"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <Spinner
            android:id="@+id/spinerLocationProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp" />
        <TextView
            android:id="@+id/tvfras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione mes"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinerMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp" />
        <Button
            android:id="@+id/_btn_Process"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/rubikregular"
            android:text="buscar"
            android:textColor="#FFFF"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikregular"
            android:text="Lista de ubicaciones"
            android:textColor="#A6A6A6"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="79dp" />
        <ImageView
            android:id="@+id/imageView245"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:background="#DADBDA"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="118dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rwProductToLocation"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="131dp" />
    </LinearLayout>




</LinearLayout>