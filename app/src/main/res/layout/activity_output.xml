<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".OutputActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/btn_atras"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/shape_menu"
            app:srcCompat="@drawable/ic_baseline_arrow_back"
            android:layout_marginLeft="10dp"

            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Salida de productos del almacen"
            android:fontFamily="@font/rubikregular"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikregular"
            android:text="Datos del producto"
            android:textColor="#A6A6A6"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="79dp" />
        <ImageView
            android:id="@+id/imageView245"
            android:layout_width="380dp"
            android:layout_height="2dp"
            android:background="#DADBDA"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="118dp" />
        <TextView
            android:id="@+id/tvfrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione empleado"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <Spinner
            android:id="@+id/spinerPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"
            />
        <TextView
            android:id="@+id/tvfras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione Producto"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <Spinner
            android:id="@+id/spinerProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"/>
        <TextView
            android:id="@+id/tvbrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione Marca"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <Spinner
            android:id="@+id/spinerBrandOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"/>
        <TextView
            android:id="@+id/tvf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Ingrese cantidad de producto"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtAmountOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/rubikregular"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/custom_input"
                android:inputType="textPersonName"
                android:minHeight="48dp" />
            <TextView
                android:id="@+id/et1_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:fontFamily="@font/rubikregular"
                android:gravity="left"
                android:textStyle="bold"
                android:text="unidades"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvfra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Seleccione UbicaciÃ³n de destino"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <Spinner
            android:id="@+id/spinerUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/rubikregular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/spinner"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"/>
        <Button
            android:id="@+id/btn_Save"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/rubikregular"
            android:text="registrar salida"
            android:textColor="#FFFF"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    </LinearLayout>
</LinearLayout>
